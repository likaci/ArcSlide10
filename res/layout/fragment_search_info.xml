<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button android:layout_width="20dp" android:layout_height="fill_parent" android:id="@+id/SearchInfoPreItem"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/SearchInfoName"
              android:textSize="20sp"
              android:layout_margin="4dp"
              android:text="名称:"
              android:textStyle="bold"
            />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/SearchInfoCoord"
              android:textSize="20sp"
              android:layout_margin="4dp"
              android:text="坐标:"
            />
    </LinearLayout>
    <View android:layout_margin="4dp" android:layout_width="1px" android:layout_height="fill_parent" android:background="#bbbcbd" ></View>
    <Button android:layout_width="40dp" android:layout_height="40dp"
            android:id="@+id/SearchInfoAddToRoute"
            android:background="@android:drawable/ic_menu_add"
            />
    <Button android:layout_width="20dp" android:layout_height="fill_parent" android:id="@+id/SearchInfoNextItem"/>
</LinearLayout>