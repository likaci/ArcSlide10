<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listMenu_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="45sp"

            android:text="高级功能"
            android:textSize="25sp"
            android:gravity="center"
            />
    <TextView android:text="起点: "
              android:textSize="20sp"
              android:id="@+id/tvStartPoint"
              android:layout_width="fill_parent"
              android:layout_height="40dp"
              android:gravity="center_vertical"/>
    <TextView android:text="终点: "
              android:textSize="20sp"
              android:id="@+id/tvEndPoint"
              android:layout_height="40dp"
              android:gravity="center_vertical"/>
    <Button android:text="计算路径"
            android:textSize="20sp"
            android:id="@+id/btnCalcRoute"
            android:gravity="center"/>
    <View android:layout_width="fill_parent" android:layout_height="2px" android:background="#ff909090" android:layout_margin="10dp"/>
</TableLayout>
