<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listMenu_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:text="高级功能"
            android:textSize="25sp"
            android:gravity="center"
            />
        <View android:layout_width="fill_parent" android:layout_height="4px" android:background="#ff909090" android:layout_margin="10dp"/>
        <TextView android:text="随手拍:"
                  android:textSize="20sp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
    <TableRow android:gravity="center">
        <Button android:text="拍照"
                android:id="@+id/takePic"
                android:textSize="20sp"
                android:gravity="center" android:layout_column="1"/>
        <Button android:text="上传"
                android:textSize="20sp"
                android:gravity="center" android:layout_column="2"/>
    </TableRow>
    <View android:layout_width="fill_parent" android:layout_height="2px" android:background="#ff909090" android:layout_margin="10dp"/>
    <TextView android:text="生产信息:"
              android:textSize="20sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <TableRow android:gravity="center">
        <Button android:text="产量"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_column="1"
                />
        <Button android:text="注水量"
                android:textSize="20sp"
                android:gravity="center" android:layout_column="2"/>
    </TableRow>
</TableLayout>
